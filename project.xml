<project>

	<extend>${basedir}/../project.xml</extend>
	<artifactId>spy</artifactId>
	<name>spy.jar</name>
	<description>
		Core java classes.
	</description>

	<dependencies>

		<dependency>
			<groupId>ant</groupId>
			<artifactId>ant</artifactId>
			<version>1.6.3</version>
		</dependency>

	</dependencies>

	<build>
		<unitTestSourceDirectory>${basedir}/src/test</unitTestSourceDirectory>
		<unitTest>
			<includes>
				<include>**/*Test.java</include>
			</includes>
			<excludes>
				<exclude>**/DBTest.java</exclude>
				<exclude>**/PKTest.java</exclude>
				<!--
				<exclude>**/ThreadPoolTest.java</exclude>
				-->
				<exclude>**/db/*.java</exclude>
			</excludes>
		</unitTest>
	</build>

</project>
